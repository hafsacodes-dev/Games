# practical ex 1 - linear search
def linearsearch(list, pop):
    for i in range(len(list)):
        if list[i] == pop:
            return i
        return -1


list = [12, 5, 8, 130, 44]
pop = int(input("Whats the target number: "))

result = linearsearch(list, pop)

if result != -1:
    print(f"Found at index: {result}")
else:
    print("Element not found in list")


# 2 Practical ex 2 - Early return  Demo
# -- modifying previous code
def linearsearch(list, pop):
    for i in range(len(list)):
        if list[i] == pop:
            return i  # this will return early
        """ return -1 """


list = [12, 5, 8, 130, 44]
pop = int(input("Whats the target number: "))

result = linearsearch(list, pop)

if result != -1:
    print(f"Found at index: {result}")
else:
    print("Element not found in list")


